\mode<presentation>

% Define Colors
\definecolor{main}{RGB}{64, 64, 64}
\definecolor{background}{RGB}{255, 255, 255} % Blanco puro
\definecolor{alert}{RGB}{120, 0, 0} % Granate oscuro
\definecolor{example}{RGB}{0, 80, 150} % Azul oscuro desaturado

% Title Page
\setbeamercolor{title}{fg=black} 
\setbeamercolor{subtitle}{fg=black} 
\setbeamercolor{author}{fg=black}
\setbeamercolor{institute}{fg=black}
\setbeamercolor{date}{fg=black}

% Frames
\setbeamercolor{frametitle}{fg=black}
\setbeamercolor{normal text}{fg=black, bg=white}
\setbeamercolor{alerted text}{fg=alert}
\setbeamercolor{example text}{fg=example}

% Table of Contents
\setbeamercolor{section in toc}{fg=black}
\setbeamercolor{subsection in toc}{fg=black}

% Head/Foot
\setbeamercolor{footline}{fg=background, bg=black}
\setbeamercolor{section in head/foot}{fg=white, bg=black}

% Blocks
\setbeamercolor{block title}{bg=main!80!background, fg=background}
\setbeamercolor{block body}{bg=main!10!background, fg=black}
\setbeamertemplate{blocks}[rounded][shadow=true]

\setbeamercolor{block title alerted}{bg=alert, fg=background}
\setbeamercolor{block body alerted}{bg=alert!10!background, fg=black}

\setbeamercolor{block title example}{bg=example, fg=background}
\setbeamercolor{block body example}{bg=example!10!background, fg=black}

% Lists (Corrección del color de los niveles de viñetas)
\setbeamercolor{itemize item}{fg=black} % Nivel 1 - Triángulo negro
\setbeamercolor{itemize subitem}{fg=black} % Nivel 2 - Círculo negro sólido
\setbeamercolor{itemize subsubitem}{fg=black} % Nivel 3 - Círculo hueco (ahora forzado a negro)

% Figures
\setbeamercolor{caption name}{fg=black}

% Bibliography
\setbeamercolor{bibliography item}{fg=main}
\setbeamercolor{bibliography entry author}{fg=main!70!black}
\setbeamercolor{bibliography entry title}{fg=main}
\setbeamercolor{bibliography entry location}{fg=main}
\setbeamercolor{bibliography entry note}{fg=main}

\mode<all>
