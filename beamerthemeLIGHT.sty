\mode<presentation>

% Requirement
\RequirePackage{tikz}
\RequirePackage{xcolor}

% Settings
\useinnertheme{LIGHT}
\usefonttheme{LIGHT}
\useoutertheme{LIGHT}
\usecolortheme{LIGHT}

% Restaurar números de sección en tabla de contenido
\setbeamertemplate{section in toc}[sections numbered]
\setbeamertemplate{subsection in toc}[subsections numbered]

% Justificación de texto en bloques
\addtobeamertemplate{block begin}{}{\justifying}

\mode<all>
