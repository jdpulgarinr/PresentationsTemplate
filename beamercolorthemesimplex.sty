\mode<presentation>

% Base absoluto
\definecolor{textblack}{RGB}{0,0,0}
\definecolor{purewhite}{RGB}{255,255,255}

% Colores semánticos (puros y sobrios)
\definecolor{alertred}{RGB}{150,0,0}
\definecolor{exampleblue}{RGB}{0,70,160}
\definecolor{neutralgray}{RGB}{0,0,0} % para bloque normal (negro puro)

% Muted (fondos suaves del cuerpo)
\definecolor{MutedRed}{rgb}{0.97, 0.92, 0.92}
\definecolor{MutedGreen}{rgb}{0.92, 0.97, 0.92}
\definecolor{MutedBlue}{rgb}{0.92, 0.94, 0.98}
\definecolor{MutedGray}{rgb}{0.95, 0.95, 0.95}

% Medium (títulos sólidos, sobrios para plantilla B/N)
\definecolor{MediumRed}{rgb}{0.78, 0.22, 0.22}      % rojo profundo, no grita
\definecolor{MediumGreen}{rgb}{0.20, 0.55, 0.50}    % verde petrolizado (serio)
\definecolor{MediumBlue}{rgb}{0.05, 0.28, 0.50}     % azul académico apagado
\definecolor{MediumGray}{rgb}{0.20, 0.20, 0.20}     % casi negro neutro

% ----------------
% Texto y fondos
% ----------------
\setbeamercolor{normal text}{fg=textblack, bg=purewhite}
\setbeamercolor{frametitle}{fg=textblack}

\setbeamercolor{title}{fg=textblack}
\setbeamercolor{subtitle}{fg=textblack}
\setbeamercolor{author}{fg=textblack}
\setbeamercolor{institute}{fg=textblack}
\setbeamercolor{date}{fg=textblack}

% ----------------
% TOC
% ----------------
\setbeamercolor{section in toc}{fg=textblack}
\setbeamercolor{subsection in toc}{fg=textblack}

% ----------------
% Head / foot
% ----------------
\setbeamercolor{footline}{fg=textblack, bg=purewhite}
\setbeamercolor{section in head/foot}{fg=textblack, bg=purewhite}

% ----------------
% BLOQUES
% ----------------

% Bloque normal (gris, coherente con B/N)
\setbeamercolor{block title}{fg=white, bg=MediumGray}
\setbeamercolor{block body}{fg=black, bg=MutedGray}

% Bloque ejemplo (azul)
\setbeamercolor{block title example}{fg=white, bg=MediumBlue}
\setbeamercolor{block body example}{fg=black, bg=MutedBlue}

% Bloque alerta (rojo)
\setbeamercolor{block title alerted}{fg=white, bg=MediumRed}
\setbeamercolor{block body alerted}{fg=black, bg=MutedRed}

% Si usas block "example" como verde en tu doc, deja esto también:
\setbeamercolor{block title example}{fg=white, bg=MediumGreen}
\setbeamercolor{block body example}{fg=black, bg=MutedGreen}

% Caja redondeada sin sombra (minimalista). Si quieres sombra, cambia a true.
\setbeamertemplate{blocks}[rounded][shadow=false]

% ----------------
% Listas
% ----------------
\setbeamercolor{itemize item}{fg=textblack}
\setbeamercolor{itemize subitem}{fg=textblack}
\setbeamercolor{itemize subsubitem}{fg=textblack}

% ----------------
% Figuras
% ----------------
\setbeamercolor{caption name}{fg=textblack}

% ----------------
% Bibliografía
% ----------------
\setbeamercolor{bibliography item}{fg=textblack}
\setbeamercolor{bibliography entry author}{fg=textblack}
\setbeamercolor{bibliography entry title}{fg=textblack}
\setbeamercolor{bibliography entry location}{fg=textblack}
\setbeamercolor{bibliography entry note}{fg=textblack}

\mode<all>
