\mode<presentation>

\RequirePackage{fontspec}
\RequirePackage{unicode-math}

\usefonttheme{professionalfonts}

% Matemáticas
\setmathfont{latinmodern-math.otf}

% Texto
\setsansfont{Helvetica Neue}
\setmonofont{Menlo}

\newfontfamily\SimplexSans[Ligatures=TeX]{Helvetica Neue}

% -------------------------
% Ajuste de jerarquías
% -------------------------

% Portada
\setbeamerfont{title page}{family=\SimplexSans}
\setbeamerfont{title page title}{size=\LARGE,series=\bfseries}
\setbeamerfont{title page author}{size=\large}
\setbeamerfont{title page institute}{size=\normalsize}
\setbeamerfont{title page date}{size=\normalsize}

% Frame title
\setbeamerfont{frametitle}{family=\SimplexSans,size=\Large,series=\bfseries}

% Captions
\setbeamerfont{caption}{size=\footnotesize}

% Secciones
\setbeamerfont{sectiontitle}{family=\SimplexSans,size=\Large,series=\bfseries}
\setbeamerfont{subsectiontitle}{family=\SimplexSans,size=\large,series=\bfseries}

\mode<all>
