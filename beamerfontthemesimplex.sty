\mode<presentation>

\RequirePackage{fontspec}
\RequirePackage{unicode-math}

% Configuración de fuente matemática
\setmathfont{STIX Two Math}  % O Libertinus Math, XITS Math, etc.

\newfontfamily\Raleway[Ligatures=TeX]{Lato}
\newfontfamily\Lato[Ligatures=TeX]{Lato}

\usefonttheme{professionalfonts}

\setsansfont{Lato}[
UprightFont=*-Regular,
ItalicFont=*-Italic,
BoldFont=*-Bold,
BoldItalicFont=*-BoldItalic
]
\setmonofont{Hack}


\setbeamerfont{title page}{family=\Lato}
\setbeamerfont{title page title}{size=\LARGE,series=\bfseries}
\setbeamerfont{title page author}{size=\footnotesize}
\setbeamerfont{title page institute}{size=\scriptsize}
\setbeamerfont{frametitle}{family=\Raleway,size=\large,series=\bfseries}
\setbeamerfont{caption}{size=\footnotesize}


\setbeamerfont{sectiontitle}{family=\Lato,size=\Large,series=\bfseries}
\setbeamerfont{subsectiontitle}{family=\Lato,size=\Large,series=\bfseries}

\mode<all>
