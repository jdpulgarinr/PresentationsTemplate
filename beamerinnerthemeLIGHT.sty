\mode<presentation>

%--------------------------------------------------------------------------------------
% Text Justification
%--------------------------------------------------------------------------------------
% Justification of Lists
\RequirePackage{ragged2e}
\renewcommand{\raggedright}{\justifying}

% Justification of Text Inside the Frames
\apptocmd{\frame}{}{\justifying}{}

% Justification of Text Inside Blocks
\addtobeamertemplate{block begin}{}{\justifying\hspace{5pt}}

%--------------------------------------------------------------------------------------
% Title Page
%--------------------------------------------------------------------------------------
\defbeamertemplate*{title page}{LIGHT}{
    \begin{center}        
        \vfill
        {\usebeamerfont{title}\usebeamercolor{title}\inserttitle}
        \par
        {\usebeamerfont{subtitle}\usebeamercolor{subtitle}\insertsubtitle}
        \vfill
        {\usebeamerfont{author}\usebeamercolor{author}\insertauthor}
        \vfill
        {\usebeamerfont{institute}\usebeamercolor{institute}\insertinstitute}
        \vfill
    \end{center}
    \addtocounter{framenumber}{-2}
}

%--------------------------------------------------------------------------------------
% Section Pages (Pantalla negra con título de sección en blanco)
%--------------------------------------------------------------------------------------
\setbeamercolor{section page}{bg=black, fg=white}
\setbeamertemplate{section page}{
    \begin{centering}
        \vfill
        \usebeamerfont{sectiontitle}\insertsection\vfill
    \end{centering}
}

\AtBeginSection[]{
    \begingroup
    \setbeamercolor{background canvas}{bg=black}
    \begin{frame}[plain, noframenumbering]
        \sectionpage
    \end{frame}
    \endgroup
}

%--------------------------------------------------------------------------------------
% Subsection Content Highlight (Diapositiva de contenido con sección actual resaltada)
%--------------------------------------------------------------------------------------
\AtBeginSubsection[]{
    \begin{frame}
        \frametitle{Contenido}
        \tableofcontents[currentsection, currentsubsection]
    \end{frame}
}

%--------------------------------------------------------------------------------------
% Bullet points - Corrección total (niveles de viñetas, sin afectar listas numeradas)
%--------------------------------------------------------------------------------------
\setbeamertemplate{itemize item}[circle] % Nivel 1 - Círculo negro sólido
\setbeamertemplate{itemize subitem}[circle] % Nivel 2 - Círculo negro sólido
\setbeamertemplate{itemize subsubitem}[circle] % Nivel 3 - Círculo hueco

% Mantener los colores correctos en listas numeradas y con viñetas
\setbeamercolor{itemize item}{bg=black} 
\setbeamercolor{itemize subitem}{bg=black} 
\setbeamercolor{itemize subsubitem}{fg=black} 

\setbeamercolor{enumerate item}{fg=black}
\setbeamercolor{enumerate subitem}{fg=black}
\setbeamercolor{enumerate subsubitem}{fg=black}

\mode<all>
